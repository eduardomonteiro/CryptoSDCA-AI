# =============================================================================
# CryptoSDCA-AI Environment Configuration Template
# Copy this file to .env and configure your values
# =============================================================================

# Application Settings
APP_NAME=CryptoSDCA-AI
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///./data/crypto_dca_bot.db

# Authentication
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=bot123
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Exchange API Keys (Replace with your actual keys)
# =============================================================================

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET_KEY=your_kucoin_secret_key_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here
KUCOIN_SANDBOX=false

# BingX
BINGX_API_KEY=your_bingx_api_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# =============================================================================
# AI Integration APIs (Replace with your actual keys)
# =============================================================================

# Microsoft 365 Copilot
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=your_microsoft_tenant_id_here
MICROSOFT_SCOPE=https://graph.microsoft.com/.default

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar-medium-online

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Trading Configuration
# =============================================================================

# DCA Settings
DEFAULT_PROFIT_TARGET=1.0
DEFAULT_STOP_LOSS=-3.0
MAX_OPERATION_DURATION_HOURS=72
MIN_PAIRS_COUNT=3

# Risk Management
MAX_POSITION_SIZE_USD=1000
MAX_DAILY_LOSS_USD=100
MAX_DRAWDOWN_PERCENT=5.0

# =============================================================================
# Technical Indicators Configuration
# =============================================================================

# ATR Settings
ATR_PERIOD=14
ATR_MULTIPLIER_MIN=1.5
ATR_MULTIPLIER_MAX=2.5

# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
RSI_OVERSOLD_VOLATILE=20
RSI_OVERBOUGHT_VOLATILE=80

# MACD Settings
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# Bollinger Bands
BB_PERIOD=20
BB_STD_DEV=2

# Moving Averages
MA_SHORT_PERIOD=50
MA_LONG_PERIOD=200

# ADX Settings
ADX_PERIOD=14
ADX_STRONG_TREND=25
ADX_WEAK_TREND=20

# Stochastic Settings
STOCH_K_PERIOD=14
STOCH_D_PERIOD=3
STOCH_OVERSOLD=20
STOCH_OVERBOUGHT=80

# =============================================================================
# Grid Trading Configuration
# =============================================================================

# Grid Spacing
GRID_SPACING_SIDEWAYS_MIN=1.0
GRID_SPACING_SIDEWAYS_MAX=3.0
GRID_SPACING_TREND_MIN=2.0
GRID_SPACING_TREND_MAX=5.0

# Grid Width
GRID_WIDTH_SIDEWAYS_MIN=15.0
GRID_WIDTH_SIDEWAYS_MAX=25.0
GRID_WIDTH_TREND_MIN=25.0
GRID_WIDTH_TREND_MAX=40.0

# =============================================================================
# News & Sentiment Configuration
# =============================================================================

# Fear & Greed Index API
FEAR_GREED_API_URL=https://api.alternative.me/fng/

# News Sources
COINTELEGRAPH_RSS=https://cointelegraph.com/rss
COINDESK_RSS=https://www.coindesk.com/arc/outboundfeeds/rss/

# Sentiment Analysis
SENTIMENT_UPDATE_INTERVAL_MINUTES=15

# Keywords (comma-separated lists)
NEGATIVE_KEYWORDS=manipulation,crash,dump,scam,hack,bear,fear,panic,sell,drop
POSITIVE_KEYWORDS=moon,bull,buy,pump,rally,surge,breakout,adoption,institutional

# =============================================================================
# Monitoring & Notifications
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/crypto_dca_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=8001

# Health Check
HEALTH_CHECK_INTERVAL_MINUTES=5
RESTART_ON_FAILURE=true

# =============================================================================
# Development & Testing
# =============================================================================

# Testing
TEST_MODE=false
PAPER_TRADING=true
TEST_DATABASE_URL=sqlite:///./data/test_crypto_dca_bot.db

# Development
RELOAD_ON_CHANGE=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:8000

# Base currencies (comma-separated)
BASE_CURRENCIES=USDT,USDC,DAI

NEGATIVE_KEYWORDS=manipulation,crash,dump,scam,hack,bear,fear,panic,sell,drop
POSITIVE_KEYWORDS=moon,bull,buy,pump,rally,surge,breakout,adoption,institutional

